<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    tools:context=".SummaryActivity"
    android:background="@drawable/mountain">

    <!-- Top Container: Picture -->

    <!-- Bottom Container: Lists -->

    <ImageView
        android:id="@+id/firstPic"
        android:layout_width="550px"
        android:layout_height="550px"
        android:layout_marginTop="5dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/lists_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08" />

    <LinearLayout
        android:id="@+id/lists_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstPic">

        <!-- Left Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingRight="10dp"
            android:orientation="vertical">

            <!-- Text Boxes for Left List -->
            <!-- Add TextViews here -->

            <TextView
                android:id="@+id/sumArtist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Top Artists"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="28sp"
                style="@style/extrabold"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sumArtist1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="20sp"
                style="@style/bold"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sumArtist2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="20sp"
                style="@style/bold"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sumArtist3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="20sp"
                style="@style/bold"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sumArtist4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="20sp"
                style="@style/bold"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sumArtist5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="20sp"
                style="@style/bold"
                android:textStyle="bold" />

            <Button
                android:id="@+id/shareBtn"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="37px"
                android:textColor="@color/white"
                style="@style/bold"
                android:text="Share  Your  Wrap" />

            <Button
                android:id="@+id/homeBtn"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="3dp"
                android:textColor="@color/white"
                style="@style/bold"
                android:text="Home" />
        </LinearLayout>

        <!-- Right Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sumTrack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Top Songs"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="28sp"
                style="@style/extrabold"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sumTrack1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="20sp"
                style="@style/bold"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sumTrack2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="20sp"
                style="@style/bold"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sumTrack3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="20sp"
                style="@style/bold"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sumTrack4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="20sp"
                style="@style/bold"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sumTrack5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="20sp"
                style="@style/bold"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35px"
                app:srcCompat="@drawable/star" />

            <TextView
                android:id="@+id/sumGenre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Top Genre:"
                android:layout_marginTop="18px"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp"
                style="@style/extrabold"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sumGenre1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17sp"
                style="@style/bold"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>