<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list"
    android:gravity="center"
    android:padding="30dp"
    android:id="@+id/activity_settings"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RhythmReport"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="45sp"
            style="@style/bold" />

        <TextView
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="SETTINGS"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            style="@style/medium" />

        <Button
            android:layout_width="40mm"
            android:layout_height="11mm"
            android:id="@+id/back_to_home"
            android:layout_marginTop="40dp"
            android:text="Back to Home"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:paddingBottom="13dp"
            style="@style/extrabold" />

        <Button
            android:layout_width="40mm"
            android:layout_height="11mm"
            android:id="@+id/update_login_info"
            android:layout_marginTop="15dp"
            android:text="Update  Login  Info"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:paddingBottom="13dp"
            style="@style/extrabold" />

        <Button
            android:layout_width="40mm"
            android:layout_height="11mm"
            android:id="@+id/delete_account"
            android:layout_marginTop="15dp"
            android:text="Delete  Account"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:paddingBottom="13dp"
            style="@style/extrabold" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:src="@drawable/music_note_logo_transparent" />

    </LinearLayout>


</RelativeLayout>