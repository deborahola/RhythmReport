<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list"
    android:gravity="center"
    android:padding="30dp"
    android:id="@+id/activity_main"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/headphones_transparent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="RhythmReport"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="45sp"
            style="@style/bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="Dive into your music journey! Explore insights &amp; stats about your favorite tunes!"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            style="@style/medium" />

        <Button
            android:layout_width="40mm"
            android:layout_height="11mm"
            android:id="@+id/get_started"
            android:layout_marginTop="40dp"
            android:text="Get Started"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:paddingBottom="13dp"
            style="@style/extrabold" />

    </LinearLayout>


</RelativeLayout>